{% if wo_breadcrumbs()|length %}
{%- spaceless -%}
<div class="page-title">
    <div class="row">
        <div class="col s12 m9 l10">
            {% set b = breadcrumbs | last %}
            <h1 class="left">{{- b.text | raw -}}</h1>
            <ul class="right">
                {% for b in breadcrumbs %}
                    <li {% if loop.last %} class="fw-600" {% endif %} itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
                        {% if b.url %}
                            <a href="{{ b.url }}" itemprop="item"{% if linkRel is defined and linkRel|length %} rel="{{ linkRel }}"{% endif %}>
                                {{- b.text | raw -}}
                            </a>
                        {% else %}
                            <span>
                                {{- b.text | raw -}}
                            </span>
                        {% endif %}
                        
                        {% if separator is not null and not loop.last %}
                            <span class='{{ separatorClass }} mr-5'>{{ separator | raw }}</span>
                        {% endif %}  
                    </li>
                {% endfor %}
            </ul>
        </div>
        <!--
        <div class="col s12 m3 l2 right-align">
            <a href="#!" class="btn grey lighten-3 grey-text z-depth-0 chat-toggle"><i class="fa fa-comments"></i></a>
        </div>
        -->
    </div>
</div>
{%- endspaceless -%}
{% endif %}