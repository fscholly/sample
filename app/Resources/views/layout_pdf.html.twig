{% import '::macros_util.html.twig' as util %}
<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8" />
        <title>Nous sommes des h√©ros</title>

        <!-- FontAwesome -->
        <link rel="stylesheet" type="text/css" href="{{ app.request.schemeAndHttpHost ~ asset('bower_components/fontawesome/css/font-awesome.min.css') }}" />

        <!-- Material Design Webfont-->
        <link rel="stylesheet" type="text/css" href="{{ app.request.schemeAndHttpHost ~  asset('bower_components/material-design-webfont/css/materialdesignicons.css') }}" />
        
        <!-- IonIcons -->
        <link rel="stylesheet" type="text/css" href="{{ app.request.schemeAndHttpHost ~ asset('bower_components/ionicons/css/ionicons.min.css') }}" />

        <!-- WeatherIcons -->
        <link rel="stylesheet" type="text/css" href="{{ app.request.schemeAndHttpHost ~ asset('bower_components/weather-icons/css/weather-icons.min.css') }}" />

        <!-- Main -->
        <link rel="stylesheet" type="text/css" href="{{ app.request.schemeAndHttpHost ~ asset('assets/_con/css/con-base.css') }}" />

        <!-- Custom -->
        <link rel="stylesheet" type="text/css" href="{{ app.request.schemeAndHttpHost ~ asset('css/custom.css') }}" />
        <style type="text/css">
            body {
                background-color : white !important;
            }
            table { page-break-inside:auto }
            tr    { page-break-inside:avoid; page-break-after:auto }
            
            .page-break { page-break-after: always; }
            
            body {
                background-image: none;
                background-color: white;
            }
            .label{
                display: inline-block;
                margin-top: 5px; 
            }
            
            .table-header-pdf tr, .table-header-pdf tr th, .table-header-pdf tr td{
                height: 10px !important;
                min-height: 10px  !important;
                max-height: 10px  !important;
            }
            .table-header-pdf{
                border: 1px solid #e7e7e7;
                margin-bottom: 10px;
            }

            .table-header-pdf {
                font-size: 9px;
            }
            td, th {
               padding: 2px 2px; 
            }
            .table-header-pdf.table-condensed > thead > tr > th, 
            .table-header-pdf.table-condensed > tbody > tr > th, 
            .table-header-pdf.table-condensed > tfoot > tr > th, 
            .table-header-pdf.table-condensed > thead > tr > td, 
            .table-header-pdf.table-condensed > tbody > tr > td, 
            .table-header-pdf.table-condensed > tfoot > tr > td {
                height: 50px;
            }
            
            .block-body span, .block-body h1,.block-body h2, .block-body h3, .block-body h4, .block-body h5, .block-body td , .block-body th {
		font-size: 10px !important;
	     }
	    .block-body .chip{
                font-size: 8px !important;
            }
        </style>
        
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <div style="{%block width %}width: 18cm;{%endblock%}">
        {%block body_header %}
            <table class="table">
                <tr>
                    <td style="vertical-align: middle">
                        <img src="{{ app.request.schemeAndHttpHost ~ config.appLogo.webPath | default('/images/logo-fond-clair.png') }}" class="h-50" alt="NSDH">
                    </td>
                    <td style="text-align: right;" width="70%">
                        <h4>{% block title %}{%endblock%}</h4>
                        {%block subtitle %}{% endblock %}
                    </td>
                </tr>
            </table>
        {%endblock%}
            <div class="block-body">
            {% block body %}{% endblock %}
            </div>
        </div>
        <!-- jQuery -->
        <script type="text/javascript" src="{{ app.request.schemeAndHttpHost ~ asset('bower_components/jquery/dist/jquery.min.js') }}" /></script>

        <!-- jQuery Ui -->
        <script type="text/javascript" src="{{ app.request.schemeAndHttpHost ~ asset('bower_components/jquery-ui/jquery-ui.js') }}" /></script>

        <!-- jQuery RAF (improved animation performance) -->
        <script type="text/javascript" src="{{ app.request.schemeAndHttpHost ~ asset('bower_components/jquery-requestAnimationFrame/dist/jquery.requestAnimationFrame.min.js') }}" /></script>

        <!-- Materialize -->
        <script type="text/javascript" src="{{ app.request.schemeAndHttpHost ~ asset('bower_components/materialize/bin/materialize.js') }}" /></script>

        <!-- Google Prettify -->
        <script type="text/javascript" src="{{ app.request.schemeAndHttpHost ~ asset('bower_components/code-prettify/src/prettify.js') }}" /></script>

        <!-- Main  CON-->
        <script type="text/javascript" src="{{ app.request.schemeAndHttpHost ~ asset('assets/_con/js/_con.js') }}" /></script>

        <script type="text/javascript">    
            jQuery(document).ready(function () {
                "use strict";
                });
    
        </script>
        {% block javascript %}{% endblock %}
    </body>
</html>
