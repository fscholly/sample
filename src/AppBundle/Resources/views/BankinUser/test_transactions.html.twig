{% extends 'AppBundle:Layout:layout.html.twig' %}

{% block stylesheets %}
{% endblock %}


{% block main_content %}
<!-- Product Helper -->
<div class="row mt-10">
    <div class="col s12">
        <div class="card">
            <div class="title">
                <h5><i class="fa fa-bolt mr-10"></i>Liste des transactions pour le compte : {{ accountName | default('-') }}</h5>
                <a class="minimize" href="#"><i class="mdi-navigation-expand-less"></i></a> 
            </div> 
            <div class="content">
                {{ dump(transactions) }}
                <b>Liste des transactions depuis le  {{ date | date('d/m/Y') }}</b>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Libellé</th>
                            <th>Montant</th>
                            <th>Catégorie</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for transaction in transactions %}
                        <tr>
                            <td>{{ transaction['date'] }}</td>
                            <td>{{ transaction['description'] }}<br>
                                {{ transaction['raw_description'] }}</td>
                            <td>{{ transaction['amount'] }}</td>
                            <td>{{ transaction['category'] }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div> 
        </div>
    </div>
</div>
{% endblock %}


{% block javascript %}

<script type="text/javascript">
$(document).ready(function() {
    
});

</script>
{%endblock%}