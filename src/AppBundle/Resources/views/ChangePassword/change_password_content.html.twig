{% form_theme form '::form_layout.html.twig' %}

<div class="row">  
    <div class="col s6">
        <div class="card">
            <div class="title"> 
                <h4 class="blue-text">Modification du mot de passe</h4>
            </div>
            <div class="content">
                {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'id': 'fos_user_change_password_form' } }) }} 
                <div class="row">
                    <div class="col s12">   
                            {{ form_rest(form) }}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>   
    </div>   
</div>   