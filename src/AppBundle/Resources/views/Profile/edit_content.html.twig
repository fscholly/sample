{% form_theme form '::form_layout.html.twig' %}


{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}    
<div class="row">
    <div class="col s6">
        <div class="card">
            <div class="title"> 
                <h4 class="blue-text"><i class="fa fa-info-circle mr-10"></i>Informations personelles</h4>
            </div> 
            <div class="content">
                <div class="row">
                    <div class="col s12">
                        {{ form_row(form.firstname) }}
                        {{ form_row(form.lastname) }}
                        {{ form_row(form.email) }}
                    </div>
                </div>
            </div>
        </div>   
    </div>
    <div class="col s6">
        <div class="card">
            <div class="title"> 
                <h4 class="blue-text">Avatar</h4>
            </div>
            <div class="content">
                {% include 'AppBundle:Layout:_form_crop_photo.html.twig' with {'form': form, 'label': 'Photo' } %}
            </div>
        </div>
    </div>  
</div>

<!-- Modal de demande de mot de passe --> 
<div id="confirmModal" class="modal mw-600"> 
  <div class="modal-content">
        <h4>Confirmer les modifications ?</h4>
        <div class="alert blue lighten-2 white-text mb-30">
            <i class="fa fa-info-circle"></i> Pour confirmer vos modifications, vous devez saisir votre mot de passe actuel.
        </div>
        {{ form_rest(form) }} 
  </div> 
  <div class="modal-footer"> 
        <a href="#!" class="btn grey modal-action modal-close waves-effect waves-light"><i class="mdi-content-undo"></i> Annuler</a> 
        <button id="submit_button" class="btn green waves-effect waves-light mr-10 "><i class="mdi-navigation-check"></i> Valider</button> 
  </div> 
</div>  
                        
{{ form_end(form) }}
    
                
                


