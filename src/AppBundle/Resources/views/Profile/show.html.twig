{% block content %}

{% block fos_user_content %}
<div class="row">
    <div class="col l6 m12 s12">
        <div class="card">
            <div class="title blue-text">
                <h4 class="blue-text"><i class="fa fa-info-circle mr-10"></i>Informations personelles</h4>
            </div>
            <div class="content">
                <div class="col s4 center">
                    <img src="{{ user.photo.imageLarge.webPath | default(null) }}" alt="{{ user.fullname }}" class="fluid-width">
                </div>
                <div class="col s8 m-0 p-0">
                    <table class="table table-striped"> 
                        <tbody> 
                            <tr> 
                                <th>Pr√©nom</th> 
                                <td>{{ user.firstname }}</td>
                            </tr>
                            <tr> 
                                <th>Nom</th> 
                                <td>{{ user.lastname }}</td> 
                            </tr>
                            <tr> 
                                <th>Email</th> 
                                <td>{{ user.email }}</td> 
                            </tr> 
                            <tr> 
                                <th>Description</th> 
                                <td>{{ user.description | raw }}</td> 
                            </tr>
                        </tbody> 
                    </table>
                </div> 
            </div>
        </div>
    </div>
</div>

     
{% endblock fos_user_content %}      

{% endblock content %}


