{% form_theme form 'form_layout.html.twig' %}

{{ form_start(form, {'attr': {'id': 'company_config_form'}}) }}

<div class="row">
    <div class="col s12">
        {% if form.appLogo is defined %}
            {% include 'AppBundle:Layout:_form_crop_image.html.twig' with {'form': form.appLogo, 'label': 'Logo application' } %}
        {% endif %}
        {% if form.quotationLogo is defined %}
            {% include 'AppBundle:Layout:_form_image.html.twig' with {'form_field': form.quotationLogo, 'label': 'Logo facture'} %}
        {% endif %}
        {{ form_rest(form) }}
    </div>
</div>
{{ form_end(form) }}
