{% form_theme form 'form_layout.html.twig' %}

{%set noPassword = noPassword | default(false) %}

{{ form_start(form, {'attr': {'id': 'user_form'}}) }}

<div class="row">
    <div class="col s12">
        <div class="card">
            <div class="title">
                <h4 class="blue-text"><i class="fa fa-info-circle mr-10"></i>Informations générales</h4>
            </div>
            <div class="content">
                {% include 'AppBundle:Layout:_form_crop_photo.html.twig' with {'form': form, 'label': 'Photo' } %}
            {{ form_row(form.firstname) }}
            {{ form_row(form.lastname) }}
            {{ form_row(form.email) }}
            {{ form_row(form.description) }}
            </div>
        </div>
        <div class="card">
            <div class="title">
                <h4 class="blue-text"><i class="fa fa-lock mr-10"></i>Informations de connexion</h4>
            </div>
            <div class="content">
            {{ form_row(form.username)}}
            {% if noPassword == false %}
            {{ form_row(form.password) }}
            {% endif %}
            {{ form_widget(form.enabled) }}
            {{ form_errors(form.enabled) }}
            </div>
        </div>
    </div>
</div>

{{ form_rest(form) }}
{{ form_end(form) }}
